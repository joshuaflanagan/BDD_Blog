<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<ul>
  <%= link_to "New Post", new_article_path %>
</ul>

<% [:notice, :error].each do |flashtype| %>
  <div class='<%=flashtype %>'>
    <%= flash[flashtype] %>
<% end %>

<%= yield %>

</body>
</html>
